    <label for="name">Name:</label>
    <input name="name" value="<%=@user.name%>">
    <br></br>
    <label for="email">Email Adress:</label>
    <input name="email" value="<%=@user.email%>">
    <br></br>
    <input type="submit" value="Update Account Info">
</form>
